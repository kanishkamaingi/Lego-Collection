<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css" />
  <title>Lego Collection - User History</title>
</head>

<body>
  <!-- Navbar - imported from daisyUI -->
  <%- include('partials/navbar', { page: '/userHistory' }) %>

  <div class="container mx-auto p-8">
    <!-- Hero section -->
    <div class="hero bg-base-200 rounded-lg shadow-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
          <p>User History: <%= session.user.email %></p>
        </div>
      </div>
    </div>
    <br>

    <!-- Login History Table -->
    <div class="overflow-x-auto">
      <table class="table w-full table-zebra">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach((entry) => { %>
            <tr>
              <td><%= new Date(entry.dateTime).toLocaleString() %></td>
              <td><%= entry.userAgent %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>

</body>

</html>
