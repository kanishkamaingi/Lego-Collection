<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css" />
  <title>Lego Collection - Login</title>
</head>

<body>
  <!-- Navbar - imported from daisyUI -->
  <%- include('partials/navbar', { page: '/login' }) %>

  <div class="container mx-auto p-8">
    <!-- Hero section -->
    <div class="hero bg-base-200 rounded-lg shadow-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Login</h1>
        </div>
      </div>
    </div>
    <br>

    <!-- Login form -->
    <form action="/login" method="POST" class="max-w-md mx-auto bg-pink-50 shadow-md rounded px-8 pt-6 pb-8 mb-4">
      
      <!-- Username input with label -->
      <div class="mb-4">
        <label for="userName" class="block text-gray-700 text-sm font-bold mb-2">Username</label>
        <input 
          type="text" 
          id="userName"
          name="userName" 
          placeholder="User Name" 
          value="<%= userName || '' %>" 
          required 
          class="w-full px-3 py-2 border rounded"
        >
      </div>

      <!-- Password input with label -->
      <div class="mb-4">
        <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
        <input 
          type="password" 
          id="password"
          name="password" 
          placeholder="Password" 
          required 
          class="w-full px-3 py-2 border rounded"
        >
      </div>

      <!-- Submit button -->
      <div class="mb-4">
        <input 
          type="submit" 
          value="Login" 
          class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >
      </div>
    </form>

    <!-- Error message alert (conditionally displayed) -->
    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
      <div class="alert alert-error max-w-md mx-auto">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= errorMessage %></span>
      </div>
    <% } %>

  </div>
</body>

</html>
