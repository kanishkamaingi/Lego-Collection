<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>

    <%- include('partials/navbar', {page: '' }) %>

        <div class="container mx-auto p-8">
            <div class="hero bg-base-200 rounded-lg shadow-lg p-6">
                <div class="hero-content text-center">
                    <div class="max-w-md">
                        <h1 class="text-5xl font-bold">
                            <%=set.name%>
                        </h1>
                        <p class="py-4">
                            Here are the details for the set "<%=set.name%>"
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-col md:flex-row justify-center items-center mt-8 space-y-6 md:space-y-0 md:space-x-8">
            <img src="<%=set.img_url%>" alt="Lego Set Image" class="rounded-lg shadow-lg max-w-xs md:max-w-md">

            <div class="text-left">
                <h2 class="text-lg">
                    <strong>Name: </strong>
                    <%=set.name%> <br>
                        <strong>Year: </strong>
                        <%=set.year%><br>
                            <strong>Theme: </strong>
                            <%=set.Theme.name%><br>
                                <strong>Parts: </strong>
                                <%=set.num_parts%><br>
                </h2>
                <div class="my-4 p-4 rounded-lg ">

                    <blockquote id="quote" class="underline italic text-sm mt-1"></blockquote>
                    <p id="auth" class="text-right text-xs"></p>
                </div>


                <% if(session.user){ %> 
                    <a href="/lego/editSet/<%= set.set_num %>">
                        <button class="btn btn-accent btn-outline btn-sm">
                            EDIT
                        </button>
                    </a>                    
                <% } %>


                <a href="#" onclick="history.back(); return false">
                    <button class="btn btn-neutral btn-outline btn-sm">
                        RETURN
                    </button>
                </a>

            </div>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                fetch('https://quotable.io/random')
                    .then((value) => value.json())
                    .then((data) => {

                        document.getElementById('quote').textContent = data.content
                        document.getElementById('auth').textContent = data.author
                    })
                    .catch(error => console.error("Error fetching quote:", error));
            })
        </script>
</body>


</html>